{"ast":null,"code":"import React,{useEffect,useState}from'react';function useDarkMode(){const[theme,setTheme]=useState(localStorage.theme);const colorTheme=theme===\"dark\"?\"light\":\"dark\";useEffect(()=>{const root=window.document.documentElement;root.classList.remove(colorTheme);root.classList.add(theme);localStorage.setItem('theme',theme);},[theme,colorTheme]);return[colorTheme,setTheme];}export default useDarkMode;","map":{"version":3,"names":["React","useEffect","useState","useDarkMode","theme","setTheme","localStorage","colorTheme","root","window","document","documentElement","classList","remove","add","setItem"],"sources":["/home/user/React/Todo-Hub/src/hooks/useDarkMode.js"],"sourcesContent":["import React, { useEffect, useState } from 'react'\n\nfunction useDarkMode() {\n    \n  const [theme, setTheme] = useState(localStorage.theme)\n  const colorTheme = theme === \"dark\" ? \"light\" : \"dark\";\n\n  useEffect(() => {\n\n    const root = window.document.documentElement;\n    root.classList.remove(colorTheme);\n    root.classList.add(theme);\n    localStorage.setItem('theme', theme);\n\n}, [theme, colorTheme]);\n\nreturn [colorTheme, setTheme]\n\n}\n\nexport default useDarkMode"],"mappings":"AAAA,MAAO,CAAAA,KAAK,EAAIC,SAAS,CAAEC,QAAQ,KAAQ,OAAO,CAElD,QAAS,CAAAC,WAAWA,CAAA,CAAG,CAErB,KAAM,CAACC,KAAK,CAAEC,QAAQ,CAAC,CAAGH,QAAQ,CAACI,YAAY,CAACF,KAAK,CAAC,CACtD,KAAM,CAAAG,UAAU,CAAGH,KAAK,GAAK,MAAM,CAAG,OAAO,CAAG,MAAM,CAEtDH,SAAS,CAAC,IAAM,CAEd,KAAM,CAAAO,IAAI,CAAGC,MAAM,CAACC,QAAQ,CAACC,eAAe,CAC5CH,IAAI,CAACI,SAAS,CAACC,MAAM,CAACN,UAAU,CAAC,CACjCC,IAAI,CAACI,SAAS,CAACE,GAAG,CAACV,KAAK,CAAC,CACzBE,YAAY,CAACS,OAAO,CAAC,OAAO,CAAEX,KAAK,CAAC,CAExC,CAAC,CAAE,CAACA,KAAK,CAAEG,UAAU,CAAC,CAAC,CAEvB,MAAO,CAACA,UAAU,CAAEF,QAAQ,CAAC,CAE7B,CAEA,cAAe,CAAAF,WAAW"},"metadata":{},"sourceType":"module","externalDependencies":[]}